<div class="container">
  <h5 style="width: 150px; background-color: #DDDDDD; text-align: center;">会員情報編集</h5>

  <%= form_with model: @customer, url: customers_information_path, method: :patch, local: :true do |f| %>

  <div class="row">
    <div class="col-md-12">

        <div class="field">
          <%= f.label :name, "氏名" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :name_kana, "フリガナ" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号" %>
          <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>


        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
          <%= link_to " 退会する", customers_confirm_path, class: "btn btn-sm btn-danger" %>
        </div>
      <% end %>

    </div>
  </div>
</div>