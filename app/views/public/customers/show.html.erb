<div class="container">
  <h5 style="width: 150px; background-color: #DDDDDD; text-align: center;">マイページ</h5>
  <div class="row">
    <div class="col-md-12">

    <h4><strong>登録情報</strong></h4><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success mb-4" %>

        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="table-active">氏名</th>
              <td><%= @customer.first_name %> <%= @customer.last_name %></td>
            </tr>
            <tr>
              <th class="table-active">カナ</th>
              <td><%= @customer.first_name_kana%> <%= @customer.last_name_kana %></td>
            </tr>
            <tr>
              <th class="table-active">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th class="table-active">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th class="table-active">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th class="table-active">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </body>
        </table>

      <h4><strong>注文履歴</h4></strong><%= link_to "一覧を見る", '/orders', class: "btn btn-primary mb-4" %>
    </div>
  </div>
</div>