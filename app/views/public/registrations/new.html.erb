<div class="container">
  <h5 style="width: 180px; background-color: #DDDDDD; text-align: center;">新規会員登録</h5>
  <div class="row">
    <div class="col-sm-12">


      <%= form_with model: @customer, url: customer_registration_path, id: 'new_costomer', class: 'new_costomer' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "(名前)" %>

          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :name_kana, "フリガナ" %>

          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>

          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
          <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(６文字以上)" %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-mx btn-success" %>
        </div>
      <% end %>

      <h5 style="width: 220px; background-color: #DDDDDD; text-align: center;">既に登録済みの方</h5>
      <%= link_to "こちら", new_customer_session_path %>  からログインしてください。
    </div>
  </div>
</div>