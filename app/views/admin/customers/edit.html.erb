<div class="container">
 <h5 style="width: 280px; background-color: #DDDDDD; text-align: center;">
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
 </h5>
 <div class="row">
  <div class="col-md-12">
    <%= form_with model: @customer, url:admin_customer_information_path(@customer.id) do |customer| %>

   <table class="table table-borderless">
     <tbody>
        <tr>
          <th class="col-md-3">ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th><%= customer.label :is_deleted, "会員ステータス" %></th>
          <td><%= customer.radio_button :is_deleted, :false %>有効 <%= customer.radio_button :is_deleted, :true %>退会</td>
        </tr>
     </tbody>
    </table>
    <div class="actions">
    <%= customer.submit '変更を保存', class: "btn btn-sm btn-success mt-9" %>
    </div>
    <% end %>

  </div>
 </div>
</div>